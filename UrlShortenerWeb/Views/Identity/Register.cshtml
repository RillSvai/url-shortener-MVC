@model RegisterViewModel
@{
    ViewData["Title"] = "Registration";
}

<div class="row">
    <div class="col-12">
        <form class="mt-5" method="post">
            <h4 class="text-center text-white">Create new account</h4>
            <div class="row">
                <div class="col-12">
                    <label asp-for="@Model.User.Email"></label>
                    <input class="form-control" asp-for="@Model.User.Email" />
                    <span asp-validation-for="@Model.User.Email"></span>
                </div>
                <div class="col-12">
                    <label asp-for="@Model.User.UserName"></label>
                    <input class="form-control" asp-for="@Model.User.UserName" />
                    <span asp-validation-for="@Model.User.UserName"></span>
                </div>
                <div class="col-6">
                    <label asp-for="@Model.User.Password"></label>
                    <input class="form-control" asp-for="@Model.User.Password"></span>
                    <span asp-validation-for="@Model.User.Password"></span>
                </div>
                <div class="col-6">
                    <label asp-for="@Model.ConfirmPassword"></label>
                    <input class="form-control" asp-for="@Model.ConfirmPassword" />
                    <span asp-validation-for="@Model.ConfirmPassword"></span>
                </div>
                <div class="col-12 mt-4">
                    <button class="btn btn-primary w-25" type="submit">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>

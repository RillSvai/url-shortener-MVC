@model RegisterViewModel
@{
    ViewData["Title"] = "Login";
    @section Scripts
        {
        <partial name="_ValidationScriptsPartial"></partial>
    }
}

<div class="row">
    <div class="col-12">
        <form class="mt-5" method="post">
            <h4 class="text-center text-white">Create new account</h4>
            <div class="row">
                <div class="col-12">
                    <label asp-for="@Model.User.Email"></label>
                    <input class="form-control" asp-for="@Model.User.Email" />
                    <span class="text-danger" asp-validation-for="@Model.User.Email"></span>
                </div>
                <div class="col-12">
                    <label asp-for="@Model.User.Password"></label>
                    <input type="password" class="form-control" asp-for="@Model.User.Password">
                    <span class="text-danger" asp-validation-for="@Model.User.Password"></span>
                </div>
                <div class="col-12 mt-4">
                    <button class="btn btn-primary w-25" type="submit">Login</button>
                </div>
            </div>
        </form>
    </div>
</div>


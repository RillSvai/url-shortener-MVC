@model UrlViewModel

<div class=" mt-5">
	<form method="post">
		<div class="row">
			<div class="text-danger" asp-validation-summary="All"></div>
			<div class="col-8">
				<label asp-for="@Model.Url.OriginalUrl"></label>
				<input class="form-control" asp-for="@Model.Url.OriginalUrl" />
				<span class="text-danger" asp-validation-for="@Model.Url.OriginalUrl"></span>
			</div>
			<div class="col-2">
				<label asp-for="@Model.TokenLen"></label>
				<input type="number" class="form-control" asp-for="@Model.TokenLen" />
			</div>
			<div class="btn-group mt-4 col-2" role="group">
				<button class="btn btn-primary" type="submit"> <i class="bi bi-scissors"></i></button>
				<a class="btn btn-secondary" asp-controller="Url" asp-action="Index">Back to table</a>
			</div>

		</div>
		
	</form>
</div>
	
@{
	@section Scripts
	{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}